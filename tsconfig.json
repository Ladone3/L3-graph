{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "lib": [
            "dom",
            "es2015"
        ],
        "importHelpers": true,
        "strict": true,
        "strictNullChecks": false
    },
    "include": [
        "./index.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./typings/typings.d.ts"
    ],
    "exclude": ["./node_modules/@types/node/globals.d.ts"],
    "files": [
        "./node_modules/@types/webvr-api/index.d.ts"
    ],
    "compileOnSave": false
}
